---

@{
    var nbDocs = @Documents["Posts"].Count();
}

<h2>MÃ©thode</h2>

<dl>
@{
    var categories = Documents["Posts"].Select<IDocument, string>(x => (string)x["Category"]).Distinct();
    foreach(var category in categories)
    {
        var count = @Documents["Posts"].Count(x => ((string)x["Category"]) == category);
        var percent = count * 100 / nbDocs;
        <dd class="percentage percentage-@percent"><span class="text">@category (@count)</span></dd>
    }
}
</dl>

<h2>Version</h2>

<dl>
@{
    var versions = Documents["Posts"].Select(x => (string)x["Version"]).Distinct();
    foreach(var version in versions)
    {
        var count = @Documents["Posts"].Count(x => (string)x["Version"] == version);
        var percent = count * 100 / nbDocs;
        <dd class="percentage percentage-@percent"><span class="text">@version (@count)</span></dd>
    }
}
</dl>

<h2>Date</h2>

<dl>
@{
    var years = Documents["Posts"].Select(x => DateTime.Parse((string)x["Date"]).Year).Distinct();
    foreach(var year in years)
    {
        var count = @Documents["Posts"].Count(x => DateTime.Parse((string)x["Date"]).Year == year);
        var percent = count * 100 / nbDocs;
        <dd class="percentage percentage-@percent"><span class="text">@year (@count)</span></dd>
    }
}
</dl>