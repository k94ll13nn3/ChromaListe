title: Statistiques
---

@{
    var nbDocs = @Documents["Posts"].Count();
}

<h2>MÃ©thode</h2>

<dl>
@{
    var categories = Documents["Posts"].SelectMany<IDocument, string>(x => (string[])x["Categories"]).Distinct();
    foreach(var category in categories)
    {
        var percent = @Documents["Posts"].Count(x => ((string[])x["Categories"]).Contains(category)) * 100 / nbDocs;
        <dd class="percentage percentage-@percent"><span class="text">@category</span></dd>
    }
}
</dl>

<h2>Version</h2>

<dl>
@{
    var versions = Documents["Posts"].Select(x => (string)x["Version"]).Distinct();
    foreach(var version in versions)
    {
        var percent = @Documents["Posts"].Count(x => (string)x["Version"] == version) * 100 / nbDocs;
        <dd class="percentage percentage-@percent"><span class="text">@version</span></dd>
    }
}
</dl>

<h2>Date</h2>

<dl>
@{
    var years = Documents["Posts"].Select(x => DateTime.Parse((string)x["Date"]).Year).Distinct();
    foreach(var year in years)
    {
        var percent = @Documents["Posts"].Count(x => DateTime.Parse((string)x["Date"]).Year == year) * 100 / nbDocs;
        <dd class="percentage percentage-@percent"><span class="text">@year</span></dd>
    }
}
</dl>