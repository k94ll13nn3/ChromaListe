@{
    var nbPkmsTotal = Pokemon.PokemonCount;
    var nbPkmsDistinct = Context.GetPosts().Select(x => x.Number).Distinct().Count();
    var nbPkms = Context.GetPosts().Count();
    var percent = nbPkmsDistinct * 100.0 / nbPkmsTotal;
}

<div class="explore">
    <div class="explore__devider">
        ------ Pokémon chromatiques : @nbPkmsDistinct/@nbPkms (@string.Format("{0:0.0}%", percent)) |
        <a id="randomPostLink"></a> ------
    </div>
    <ul class="categories">
        @foreach (Category category in Context.GetPosts().Select(x => x.Category).Distinct().OrderBy(x => x.GetDescription()))
        {
            <li class="categories__item"><a href="@Context.GetLink("/")categories/@(category.ToString().Slugify())">@category.GetDescription()</a></li>
        }
    </ul>
    <div class="explore__label">
        Thème <a href="https://github.com/kronik3r/daktilo">Daktilo</a> sous licence MIT.<br/>
        Données reprises de <a href="https://github.com/smogon/pokemon-showdown">pokemon-showdown</a> sous licence MIT.<br/>
