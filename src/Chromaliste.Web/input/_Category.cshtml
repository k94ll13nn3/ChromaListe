@{
    Layout = "/_Page.cshtml";
    var posts = Metadata.Get<IEnumerable<IDocument>>(CustomKeys.CategoryPosts);
}

<ul class="list-posts">
    @foreach(var doc in posts.OrderByDescending(x => x[CustomKeys.WritePath]))
    {
        @Html.Partial("_PostTeaser", new PostData(doc))
    }

    @RenderBody()
</ul>
